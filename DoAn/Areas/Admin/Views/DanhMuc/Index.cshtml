@model IEnumerable<DoAn.Models.DanhMuc>

@{
    ViewBag.Title = "Index";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<h2 style="text-align: center;">Quản lý danh mục</h2>

<p>
    @Html.ActionLink("Thêm mới danh mục", "Create")
</p>
<table class="table">
    <tr>
        <th>
            <p>Danh mục</p>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.TenDanhMuc)
        </td>
        <td>
            @Html.ActionLink("Sửa", "Edit", new { id=item.DanhMucId }) |
            @Html.ActionLink("Xóa", "Delete", new { id=item.DanhMucId })
        </td>
    </tr>
}

</table>
